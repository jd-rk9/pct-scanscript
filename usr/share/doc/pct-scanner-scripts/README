# example of xbindkeys system: layer-scanner-xbindkeysrc.scm

; scannen lineart
(xbindkey '(Mod4 l) "/usr/bin/x-terminal-emulator -e /usr/bin/pct-scanner-script --lineart")

; scannen grayscale
(xbindkey '(Mod4 g) "/usr/bin/x-terminal-emulator -e /usr/bin/pct-scanner-script --grayscale")

; scannen color
(xbindkey '(Mod4 c) "/usr/bin/x-terminal-emulator -e /usr/bin/pct-scanner-script --color")

